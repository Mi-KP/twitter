<div class="main login_form">
  <div class="container">
    <div class="loginform">
      <div class="loginmessage">
          <%=@error_messages%>
      </div>
      <%= form_tag("/login") do %>
      <p>メールアドレス</p>
      <input name="email" value="<%= @user.email %>" >
      <p>パスワード</p>
      <input name="password" type="password" value="<%= @user.password %>" >
      <input type="submit" value="ログイン">
      <% end %>
    </div>
  </div>
</div> 