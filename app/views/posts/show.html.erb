<div class="container">
  <div class="d-flex flex-column align-items-left ml-5 mt-5 border">

    <div class="d-flex flex-row align-items-center">
      <div class="m-2">
        <%= link_to(image_tag("/user_images/#{@post.user.image_name}", class: "rounded-circle img-thumbnail", style: "object-fit: cover; width: 50px ; height: 50px"),"/users/#{@post.user.id}") %>
      </div>
      <div class="d-flex flex-column justify-content-start">
        <div class="d-flex flex-row align-items-end">
          <div>
            <b><%= link_to(@post.user.name,"/users/#{@post.user.id}", class: 'bold mr-2 text-dark') %></b>
          </div>
        </div>

      </div>
    </div>


    <div style="margin: 8px">
      <%# ここからツイート内容 %>
      <div class="lead">
        <%= link_to(@post.content,"/posts/#{@post.id}", class: 'text-dark') %>
      </div>


      <%# ここからツイート時間 %>
      <div class="small text-muted mt-3">
        <%= l @post.created_at , format: :short %>
      </div>

      <%# ここからライクの数 %>
      <div class="mt-3">
        <% if @like %>
        <%= link_to("/like/#{@post.id}/destroy",{method:"post"}) do %>
        <i class="fas fa-heart"></i>
        <% end %>
        <%= @likes %>
        <% else %>
        <%= link_to("/like/#{@post.id}/create",{method:"post"}) do %>
        <i class="far fa-heart"></i>
        <% end %>
        <%= @likes %>
        <% end %>
      </div>
      <%# ここまでライクの数 %>

      <%# ここから編集と削除ボタン %>
      <div>
        <% if @current_user.id == @post.user_id %>
        <%= link_to("編集","/posts/#{@post.id}/edit", class: 'btn btn-primary btn-sm mt-3') %>
        <%= link_to("削除","/posts/#{@post.id}/destroy", class: 'btn btn-primary btn-sm mt-3', method: 'post') %>
        <% end %>
      </div>
      <%# ここまで編集と削除ボタン %>
    </div>

  </div>
</div>